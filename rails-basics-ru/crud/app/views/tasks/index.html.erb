<h1>Tasks</h1>

<%= link_to 'New task', new_task_path %>

<% @tasks.each do |task| %>
  <hr>
  <p>
  <div>
    <%= link_to task.name, task_path(task) %>
  </div>
  <div>
    <%= task.description if task.description %>
  </div>
  <div>
    Status: <%= task.status %>
    <% if task.completed %>
      . Completed
    <% end %>
  </div>
  <div>Creator: <%= task.creator %></div>
  <div>Performer: <%= task.performer %></div>

  <div>
    <%= render partial: 'menu', locals: { task: @task} %>
  </div>
  </p>
<% end %>
